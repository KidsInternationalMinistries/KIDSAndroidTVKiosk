<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiosk Configuration"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Current Version -->
    <TextView
        android:id="@+id/currentVersionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Version: Loading..."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Build Type Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build Type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/buildTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="30dp"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Orientation Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orientation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/orientationSpinner"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="30dp"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Device ID Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device ID"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/deviceIdSpinner"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="40dp"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading device IDs..."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <!-- Save Changes Button -->
        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Save Changes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/install_button_background"
            android:layout_marginEnd="10dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/updateButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Update APK"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/install_button_background"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</LinearLayout>