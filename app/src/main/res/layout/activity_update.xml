<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiosk Configuration"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <!-- Current Version -->
    <TextView
        android:id="@+id/currentVersionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Version: Loading..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <!-- Build Type Section - Side by side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Build Type:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingEnd="10dp" />

        <Spinner
            android:id="@+id/buildTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/spinner_background"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>

    <!-- Orientation Section - Side by side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Orientation:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingEnd="10dp" />

        <Spinner
            android:id="@+id/orientationSpinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/spinner_background"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>

    <!-- Device ID Section - Side by side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Device ID:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingEnd="10dp" />

        <Spinner
            android:id="@+id/deviceIdSpinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/spinner_background"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading device IDs..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/kioskButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Launch Kiosk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/install_button_background"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Button
            android:id="@+id/saveAndInstallButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Install Update"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/install_button_background"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Button
            android:id="@+id/preReleaseButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Install PreRelease"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/install_button_background"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Exit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/install_button_background"
            android:layout_marginStart="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>

</LinearLayout>